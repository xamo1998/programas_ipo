<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.camerakit.CameraKitView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:keepScreenOn="true"
        app:camera_flash="auto"
        app:camera_facing="back"
        app:camera_focus="continuous"
        app:camera_permissions="camera" />
    <LinearLayout
        android:id="@+id/menu_layout"
        android:orientation="horizontal"
        android:weightSum="5"
        android:visibility="invisible"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="1"
            android:id="@+id/left_arrow"
            android:tint="#64000000"
            android:src="@drawable/arrow_left"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:id="@+id/cardView1"
            android:layout_weight="1"
            android:tint="#64000000"
            app:cardCornerRadius="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/TextView1_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Galería"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_weight="1"
            android:id="@+id/cardView2"
            app:cardCornerRadius="20dp"
            android:tint="#64000000"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextView2_main"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="Cámara"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_weight="1"
            android:tint="#64000000"
            android:id="@+id/cardView3"
            app:cardCornerRadius="20dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/TextView3_main"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Mapas"/>
        </android.support.v7.widget.CardView>
        <ImageView
            android:id="@+id/rigth_arrow"
            android:src="@drawable/arrow_rigth"
            android:layout_weight="1"
            android:tint="#64000000"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:id="@+id/buttonHome"
        android:src="@drawable/home"
        android:tint="#64000000"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="50dp" />


<LinearLayout
    android:layout_width="350dp"
    android:visibility="invisible"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="50dp"
    android:orientation="vertical"

    android:id="@+id/grid_layout"
    android:layout_marginBottom="20dp"
    android:background="#64ffffff"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="20dp"
        android:src="@drawable/exit"
        android:layout_marginTop="10dp"
        android:tint="#b00404"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_height="20dp" />
    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="3"
            android:rowCount="100"
            android:background="#64ffffff"
            android:layout_height="match_parent">


            android:layout_width="100dp"
            android:src="@drawable/hoja"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/noria"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/puente"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/rose"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/hoja"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/noria"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/puente"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/rose"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/hoja"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/noria"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/puente"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/rose"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/hoja"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/noria"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/puente"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/rose"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/hoja"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/noria"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/puente"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_height="100dp" />
            <ImageView
                android:layout_width="100dp"
                android:src="@drawable/rose"
                android:layout_marginLeft="10dp"
                android:layout_height="100dp" />
        </GridLayout>
    </ScrollView>

</LinearLayout>

    <ImageView
        android:id="@+id/recordButton"
        android:layout_width="65dp"
        android:layout_marginBottom="15dp"
        android:layout_height="65dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/record"/>
    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_camara"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="35dp"
            android:id="@+id/recordButtonSmall"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/record"/>
        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="00:00:01"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/stop_image"
        android:layout_width="wrap_content"
        android:src="@drawable/stop"
        android:scaleX="0.5"
        android:visibility="visible"
        android:scaleY="0.5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content" />

</RelativeLayout>